{
  "name": "browserstack-report-action",
  "version": "1.0.0",
  "description": "Fetches BrowserStack report and displays it in GitHub Actions summary.",
  "main": "src/main.js",
  "scripts": {
    "lint": "eslint . --ext .js",
    "build": "ncc build src/main.js",
    "test": "nyc --reporter=html mocha 'test/**/*test.js'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run build && git add dist/"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/browserstack/github-actions.git"
  },
  "keywords": [
    "actions",
    "browserstack",
    "fetch report"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "chai": "^4.2.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^4.2.5",
    "mocha": "^8.1.1",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2"
  },
  "nyc": {
    "all": true,
    "exclude": [
      "**/*.test.js",
      "node_modules",
      ".eslintrc.js",
      "coverage",
      "dist/*",
      "config"
    ]
  }
}
